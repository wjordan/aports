pkgname=ruby-mysql2
_gemname=mysql2
pkgver=0.4.2
pkgrel=0
pkgdesc="A simple, fast Mysql library for Ruby, binding to libmysql"
url="https://github.com/brianmario/mysql2"
arch="all"
license="MIT"
depends="ruby"
depends_dev="ruby-dev mariadb-dev"
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}
md5sums="69cd60f9b6c077923c8ba72cd178254e  mysql2-0.4.2.gem"
sha256sums="0a12414109d6f1c328ed29a2157daff265eab81f1b3bce7794fcb4804fdaeb66  mysql2-0.4.2.gem"
sha512sums="d6883149dbd505c5d7f73c657a5fd2eebaeff9f78d411ac2fcb9bf78dc7f45866290067f20af2dd40a1851a26b09f1af404bc7aba3c60dd979475b7db81e2dae  mysql2-0.4.2.gem"
